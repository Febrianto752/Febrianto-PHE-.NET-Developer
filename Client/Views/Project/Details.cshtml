@model ProjectDetailsVM


<div class="row justify-content-center">
    <div class="col-sm-8 ">
        <a asp-action="Index" class="btn btn-sm btn-info mb-3">&laquo;Back</a>
        <a asp-action="Edit" asp-route-guid="@Model.ProjectGuid" class="btn btn-sm btn-warning mb-3">Edit</a>
        <partial name="_FlashMessage" />
        <div class="card p-4 shadow-lg rounded">
            <div class="card-body">
                <h3 class="card-title mb-5 text-center">Detail Proyek</h3>

                <div class="mb-3">
                    <label class="form-label"><b>Nama : </b></label>
                    <input class="form-control" asp-for="ProjectName" disabled />
                </div>

                <div class="mb-3">
                    <label class="form-label"><b>Deskripsi : </b></label>
                    <textarea class="form-control" asp-for="Description" disabled ></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label"><b>Tanggal Mulai : </b></label>
                    <input class="form-control" value="@Model.StartDate.ToShortDateString()" disabled />
                </div>

                <div class="mb-3">
                    <label class="form-label"><b>Tanggal Selesai (Perkiraan) : </b></label>
                    <input class="form-control" value="@Model.EndDate.ToShortDateString()" disabled />
                </div>

                <hr />
                <h3 class="text-center my-3">Vendors</h3>

                @if (Model.VendorParticipants.Count() > 0)
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nama</th>
                                <th scope="col">Jenis Perusahaan</th>
                                <th scope="col">Bidang Usaha</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var i = 0;
                            }
                            @foreach(var vendorParticipant in Model.VendorParticipants)
                            {
                                <tr>
                                    <th scope="row">@(i++)</th>
                                    <td>@vendorParticipant.VendorName</td>
                                    <td>@vendorParticipant.TypeCompany</td>
                                    <td>@vendorParticipant.BusinessField</td>
                                </tr>
                            }
                            

                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center">Belum ada vendor yang daftar.</p>
                }
            </div>
        </div>
    </div>
</div>